{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StitchALotStudio",
  "version": "1.2.5",
  "identifier": "com.needlepoint.designer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "iOS": {
      "developmentTeam": "2R9XF345CU",
      "minimumSystemVersion": "13.0"
    },
    "fileAssociations": [
      {
        "ext": ["stitchalot"],
        "name": "StitchALot Pattern",
        "description": "StitchALot Studio Pattern File",
        "role": "Editor",
        "mimeType": "application/x-stitchalot"
      }
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Stitch A Lot Studio",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
